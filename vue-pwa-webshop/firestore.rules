rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Products - read for all, write for authenticated users
    match /products/{productId} {
      allow read: if true;
      allow write: if isSignedIn();
    }
    
    // Price history - read for authenticated, write only by server
    match /priceHistory/{historyId} {
      allow read: if isSignedIn();
      allow write: if false; // Only Firebase Functions can write
    }
    
    // User data - only owner can access
    match /users/{userId} {
      allow read: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if false; // Users cannot delete themselves
    }
    
    // Carts - only owner can access
    match /carts/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    // Orders - only owner can read, create during checkout
    match /orders/{orderId} {
      allow read: if isSignedIn() && 
                     resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && 
                       request.resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Orders are immutable
    }
    
    // Price alerts - only owner can access
    match /priceAlerts/{alertId} {
      allow read: if isSignedIn() && 
                     resource.data.userId == request.auth.uid;
      allow create: if isSignedIn() && 
                       request.resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && 
                       resource.data.userId == request.auth.uid;
      allow delete: if isSignedIn() && 
                       resource.data.userId == request.auth.uid;
    }
    
    // Notifications - only owner can read
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && 
                     resource.data.userId == request.auth.uid;
      allow update: if isSignedIn() && 
                       resource.data.userId == request.auth.uid; // To mark as read
      allow create, delete: if false; // Only Firebase Functions can create/delete
    }
    
    // Analytics - read for authenticated (aggregated data)
    match /analytics/{date} {
      allow read: if isSignedIn();
      allow write: if false; // Only Firebase Functions can write
    }
    
    // Metadata - read for all
    match /metadata/{doc} {
      allow read: if true;
      allow write: if false; // Only Firebase Functions can write
    }
  }
}
